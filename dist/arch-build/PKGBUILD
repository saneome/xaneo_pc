pkgname=xaneo-pc
pkgver=1.0.0
pkgrel=1
pkgdesc="Xaneo PC - Desktop application with onboarding"
arch=('x86_64')
url="https://xaneo.com"
license=('custom')
depends=('gtk3' 'glib2')

package() {
    mkdir -p "$pkgdir/opt/xaneo-pc"
    mkdir -p "$pkgdir/usr/share/applications"
    mkdir -p "$pkgdir/usr/share/icons/hicolor/256x256/apps"
    mkdir -p "$pkgdir/usr/bin"
    
    cp -r /home/xaneodev/xaneo_pc/AppDir/* "$pkgdir/opt/xaneo-pc/"
    cp /home/xaneodev/xaneo_pc/AppDir/xaneo_pc.desktop "$pkgdir/usr/share/applications/"
    cp /home/xaneodev/xaneo_pc/AppDir/xaneo_pc.png "$pkgdir/usr/share/icons/hicolor/256x256/apps/"
    ln -sf /opt/xaneo-pc/xaneo_pc_new "$pkgdir/usr/bin/xaneo-pc"
}
